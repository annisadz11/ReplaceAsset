@model ReplaceAsset.Models.NewHire

@{
    ViewData["Title"] = "New Hires";
}

<div class="row gutters justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card">
            <div class="card-header text-center border-bottom">
                <h2 class="card-title font-weight-bold"> New Hire Details</h2>
            </div>
            <hr class="m-0" />
            <div class="card-body">
                <!-- Breadcrumb -->
                <partial name="_Breadcrumb" />
                <!-- Toolbar -->
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Name</label>
                            <div class="input-group justify-content-center">
                                <input type="text" class="form-control" value="@Model.Name" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Department</label>
                            <div class="input-group justify-content-center">
                                <input type="text" class="form-control" value="@Model.Department" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Designation</label>
                            <div class="input-group justify-content-center">
                                <input type="text" class="form-control" value="@Model.Designation" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Serial Number</label>
                            <div class="input-group justify-content-center">
                                <input type="text" class="form-control" value="@Model.SerialNumber" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Device</label>
                            <div class="input-group justify-content-center">
                                <input type="text" class="form-control" value="@Model.Device" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Model Asset</label>
                            <div class="input-group justify-content-center">
                                <input type="text" class="form-control" value="@Model.ModelAsset" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Date Of Join</label>
                            <div class="input-group justify-content-center">
                                <input type="text" class="form-control" value="@(Model.DateOfJoin?.ToString("yyyy-MM-dd"))" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Status Completed</label>
                            <div class="input-group justify-content-center">
                                @if (!Model.StatusCompleted)
                                {
                                    <span class="form-control badge badge-warning">Waiting for Done Deploy</span>
                                }
                                else
                                {
                                    <span class="form-control badge badge-success">Done Deploy</span>
                                }
                            </div>
                        </div>
                        <!-- Checklist Items -->
                        <div class="form-group">
                            <h4>Checklist Items</h4>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" disabled @(Model.HeadsetGiven ? "checked" : "") />
                                <label class="form-check-label">Headset</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" disabled @(Model.LaptopGiven ? "checked" : "") />
                                <label class="form-check-label">Laptop</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" disabled @(Model.AdaptorGiven ? "checked" : "") />
                                <label class="form-check-label">Adaptor</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" disabled @(Model.PowerCableGiven ? "checked" : "") />
                                <label class="form-check-label">Power Cable</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" disabled @(Model.BagGiven ? "checked" : "") />
                                <label class="form-check-label">Bag</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</div>
