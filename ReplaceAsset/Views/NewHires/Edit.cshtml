@model ReplaceAsset.Models.NewHire

@{
    ViewData["Title"] = "New Hires";
    DateTime? dateOfJoin = (DateTime?)ViewData["DateOfJoin"];
}

<div class="row gutters justify-content-center">
    <div class="col-10 mt-5">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            <div class="card m-0">
                <div class="container d-flex justify-content-center">
                    <div class="card-header text-center">
                        <h3 class="card-title font-weight-bold mb-0" style="font-size: 1.2rem;">Edit Data New Hire</h3>
                    </div>
                </div>
                <hr class="m-0" />
                <div class="card-body">
                    <!-- Breadcrumb -->
                    <partial name="_Breadcrumb" />
                    <!-- Toolbar -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row gutters justify-content-center">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Department" class="control-label"></label>
                            <input asp-for="Department" class="form-control" />
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Designation" class="control-label"></label>
                            <input asp-for="Designation" class="form-control" />
                            <span asp-validation-for="Designation" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SerialNumber" class="control-label"></label>
                            <input asp-for="SerialNumber" class="form-control" />
                            <span asp-validation-for="SerialNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Device" class="control-label"></label>
                            <input asp-for="Device" class="form-control" />
                            <span asp-validation-for="Device" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ModelAsset" class="control-label"></label>
                            <input asp-for="ModelAsset" class="form-control" />
                            <span asp-validation-for="ModelAsset" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateOfJoin" class="control-label"></label>
                            <input asp-for="DateOfJoin" class="form-control" type="date" />
                            <span asp-validation-for="DateOfJoin" class="text-danger"></span>
                        </div>
                        <h5>Checklist Items</h5>
                        <div class="form-check">
                            <input asp-for="HeadsetGiven" class="form-check-input" type="checkbox" id="headsetGiven" />
                            <label class="form-check-label" asp-for="HeadsetGiven">Headset</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="LaptopGiven" class="form-check-input" type="checkbox" id="laptopGiven" />
                            <label class="form-check-label" asp-for="LaptopGiven">Laptop</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="AdaptorGiven" class="form-check-input" type="checkbox" id="adaptorGiven" />
                            <label class="form-check-label" asp-for="AdaptorGiven">Adaptor</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="PowerCableGiven" class="form-check-input" type="checkbox" id="powerCableGiven" />
                            <label class="form-check-label" asp-for="PowerCableGiven">Power Cable</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="BagGiven" class="form-check-input" type="checkbox" id="bagGiven" />
                            <label class="form-check-label" asp-for="BagGiven">Bag</label>
                        </div>

                        <div class="container d-flex justify-content-center mt-3">
                            <input type="submit" value="Update" class="btn btn-primary" style="margin: 0 5px;" />
                            <a asp-action="Index" class="btn btn-secondary" style="margin: 0 5px;">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/vendor/notyf/notyf.min.js"></script>
    <script>
        // Notyf instance
        var notyf = new Notyf();

        // Check if the query parameter returnFromEdit exists in URL
        if (new URLSearchParams(window.location.search).has('returnFromEdit')) {
            notyf.success('Data New Hire updated successfully!');
        }
    </script>
}
