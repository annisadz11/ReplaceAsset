@model ReplaceAsset.Models.AssetScrap

@{
    ViewData["Title"] = "Asset Scraps";
}

<div class="row gutters justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card">
            <div class="card-header text-center border-bottom">
                <h2 class="card-title font-weight-bold">Asset Request Details</h2>
            </div>
            <hr class="m-0" />
            <div class="card-body">
                <!-- Breadcrumb -->
                <partial name="_Breadcrumb" />
                <!-- Toolbar -->
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Type</label>
                            <div class="input-group justify-content-center">
                                <input type="text" class="form-control" value="@Model.Type" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Serial Number</label>
                            <div class="input-group justify-content-center">
                                <input type="text" class="form-control" value="@Model.SerialNumber" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Location</label>
                            <div class="input-group justify-content-center">
                                <input type="text" class="form-control" value="@Model.Location" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Date Input</label>
                            <div class="input-group justify-content-center">
                                <input type="text" class="form-control" value="@(Model.DateInput?.ToString("yyyy-MM-dd"))" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Validation Scrap</label>
                            <div class="input-group justify-content-center">
                                @if (!Model.ValidationScrap)
                                {
                                    <span class="form-control badge badge-warning">Waiting for Done Scrap</span>
                                }
                                else
                                {
                                    <span class="form-control badge badge-success">Done Scrap</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</div>