@{
    ViewData["Title"] = "Scrap Asset Replacement";
}

<link href="~/vendor/bootstrap-table/bootstrap-table.min.css" rel="stylesheet" />
<link href="~/vendor/bootstrap-table/bootstrap-table-sticky-header.css" rel="stylesheet" />

<div class="row gutters mt-4">
    <div class="card">
        <div class="card-header text-center" style="font-size: 1.00rem;">Asset Scrap Form</div>
        <hr class="m-0" />
        <div class="card-body">
            <div id="toolbar">
                <div class="btn-group me-2">
                    <a class="btn btn-primary " asp-action="Create">Add Data Scrap</a>
                </div>
            </div>
            <table id="table"
                   data-toggle="table"
                   data-locale="en-US"
                   data-sticky-header="true"
                   data-sticky-header-offset-y="60"
                   data-search="true"
                   data-toolbar="#toolbar"
                   data-search-highlight="true"
                   data-search-align="right"
                   data-show-toggle="true"
                   data-show-refresh="true"
                   data-show-columns="true"
                   data-buttons="[]"
                   data-key-events="true"
                   data-url="@Url.Action("GetData", "AssetScraps")"
                   data-pagination="true"
                   data-side-pagination="server"
                   data-show-columns-toggle-all="true"
                   data-pagination-loop="false"
                   data-pagination-pre-text="Previous"
                   data-pagination-next-text="Next"
                   data-page-size="50">
                <thead>
                    <tr>
                        <th data-field="type" data-sortable="true" data-width="100">Type</th>
                        <th data-field="serialNumber" data-sortable="true" data-width="150">Serial Number</th>
                        <th data-field="location" data-sortable="true" data-width="150">Location</th>
                        <th data-field="dateInput" data-sortable="true" data-width="150">Date Input</th>
                        <th data-field="validationScrap" data-sortable="true" data-formatter="statusFormatter" class="text-center" data-width="150">Validation Scrap</th>
                        <th data-formatter="actionFormatter" class="text-center no-space-three text-nowrap" data-width="100">Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts 
{
    <script src="~/vendor/bootstrap-table/bootstrap-table.min.js"></script>
    <script src="~/vendor/bootstrap-table/bootstrap-table-sticky-header.min.js"></script>
    <script src="~/vendor/bootstrap-table/bootstrap-table-filter-control.min.js"></script>
    <script>
        function statusFormatter(value, row, index) {
            if (value) {
                return '<span class="badge rounded-pill text-bg-success">Done Scrap</span>';
            } else {
                return '<span class="badge rounded-pill text-bg-secondary">Pending</span>';
            }
        }

        function actionFormatter(value, row, index) {
            var editUrl = '@Url.Action("Edit", "AssetScraps")' + '/' + row.id;
            var deleteUrl = '@Url.Action("Delete", "AssetScraps")' + '/' + row.id;
            var detailsUrl = '@Url.Action("Details", "AssetScraps")' + '/' + row.id;
            var editBtn = '<a href="' + editUrl + '" class="btn btn-sm btn-primary">Edit</a>';
            var deleteBtn = '<button class="btn btn-sm btn-danger" onclick="confirmDelete(' + row.id + ')">Delete</button>';
            var detailsBtn = '<a href="' + detailsUrl + '" class="btn btn-sm btn-info">Details</a>';
            return editBtn + ' ' + deleteBtn + ' ' + detailsBtn;
        }

        function confirmDelete(id) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("Delete", "AssetScraps")' + '/' + id + '?handler=Delete';
                }
            });
        }

        $(function () {
            var $table = $('#table');

            // Periksa apakah tabel sudah diinisialisasi sebelumnya
            if (!$table.data('bootstrap.table')) {
                $table.bootstrapTable({
                    url: '@Url.Action("GetData", "AssetScraps")',
                    pageSize: 50,
                    columns: [
                        {
                            field: 'type',
                            title: 'Type',
                            sortable: true,
                            width: 100
                        },
                        {
                            field: 'serialNumber',
                            title: 'Serial Number',
                            sortable: true,
                            width: 150
                        },
                        {
                            field: 'location',
                            title: 'Location',
                            sortable: true,
                            width: 150
                        },
                        {
                            field: 'dateInput',
                            title: 'Date Input',
                            sortable: true,
                            width: 150
                        },
                        {
                            field: 'validationScrap',
                            title: 'Validation Scrap',
                            sortable: true,
                            formatter: 'statusFormatter',
                            width: 150
                        },
                        {
                            field: 'actions',
                            title: 'Actions',
                            formatter: 'actionFormatter',
                            width: 100
                        }
                    ]
                });
            }
        });
    </script>
}