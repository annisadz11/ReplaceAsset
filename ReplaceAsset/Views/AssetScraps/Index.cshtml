@{
    ViewData["Title"] = "Asset Scraps";
}

<link href="~/vendor/bootstrap-table/bootstrap-table.min.css" rel="stylesheet" />
<link href="~/vendor/bootstrap-table/bootstrap-table-sticky-header.css" rel="stylesheet" />
@* 
<style>

</style> *@
<div class="row gutters mt-4">
    <div class="card">
        <div class="card-header text-center" style="font-size: 1.00rem;">Asset Scrap Form</div>
        <hr class="m-0" />
        <div class="card-body">
            <!-- Breadcrumb -->
            <partial name="_Breadcrumb" />
            <!-- Toolbar -->
            <div id="toolbar">
                <div class="btn-group me-2">
                    @if (User.IsInRole("UserAdmin") || User.IsInRole("UserIntern"))
                    {
                        <a class="btn btn-primary" asp-action="Create">Add Scrap</a>
                    }
                </div>
                <div class="btn-group me-2">
                    <button id="deleteSelectedBtn" class="btn btn-danger" onclick="confirmDeleteSelected()">Delete Selected</button>
                </div>
                <div class="btn-group">
                    <button id="exportPdfBtn" class="btn btn-info">PDF</button>
                </div>

            </div>
            <table id="table"
                   data-toggle="table"
                   data-locale="en-US"
                   data-sticky-header="true"
                   data-sticky-header-offset-y="60"
                   data-search="true"
                   data-toolbar="#toolbar"
                   data-search-highlight="true"
                   data-search-align="right"
                   data-show-toggle="true"
                   data-show-refresh="true"
                   data-show-columns="true"
                   data-buttons="[]"
                   data-key-events="true"
                   data-url="@Url.Action("GetData", "AssetScraps")"
                   data-pagination="true"
                   data-show-columns-toggle-all="true"
                   data-pagination-loop="false"
                   data-pagination-pre-text="Previous"
                   data-pagination-next-text="Next"
                   data-page-size="50"
                   data-filter-control="true">
                <thead>
                    <tr>
                        <th data-field="state" data-checkbox="true"></th>
                        <th data-field="type" data-sortable="true" data-width="100">Type</th>
                        <th data-field="serialNumber" data-sortable="true" data-width="150">Serial Number</th>
                        <th data-field="location" data-sortable="true" data-width="150">Location</th>
                        <th data-field="dateInput" data-sortable="true" data-width="150">Date Input</th>
                        <th data-field="validationScrap" data-sortable="true" data-formatter="statusFormatter" class="text-center" data-width="150">Validation Scrap</th>
                        <th data-formatter="actionFormatter" class="text-center no-space-three text-nowrap" data-width="100">Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/vendor/bootstrap-table/bootstrap-table.min.js"></script>
    <script src="~/vendor/bootstrap-table/bootstrap-table-sticky-header.min.js"></script>
    <script src="~/vendor/bootstrap-table/bootstrap-table-filter-control.min.js"></script>
    <script src="~/vendor/notyf/notyf.min.js"></script>
    <script src="~/vendor/sweetalert2/sweetalert2.all.min.js"></script>

    <script>
        var notyf = new Notyf({
            position: {
                x: 'center',
                y: 'top',
            },
            duration: 2000,
            dismissible: true,
            types: [
                {
                    type: 'success',
                    background: 'green',
                    icon: false
                },
                {
                    type: 'error',
                    background: 'red',
                    icon: false
                }
            ]
        });

        function statusFormatter(value, row) {
            if (value) {
                return '<span class="badge rounded-pill text-bg-success">Done Scrap</span>';
            } else {
                return '<span class="badge rounded-pill text-bg-secondary">Pending</span>';
            }
        }

        var isAdminOrIntern = @Html.Raw(Json.Serialize(User.IsInRole("UserAdmin") || User.IsInRole("UserIntern")));
        var isManagerIT = @Html.Raw(Json.Serialize(User.IsInRole("UserManagerIT")));
        var isEmployee = @Html.Raw(Json.Serialize(User.IsInRole("UserEmployee")));

        function actionFormatter(value, row, index) {
            var editUrl = '@Url.Action("Edit", "AssetScraps")' + '/' + row.id;
            var detailsUrl = '@Url.Action("Details", "AssetScraps")' + '/' + row.id;

            var editBtn = '<a href="' + editUrl + '" class="btn btn-sm btn-warning">Edit</a>';
            var detailsBtn = '<a href="' + detailsUrl + '" class="btn btn-sm btn-info">Details</a>';

            if (isAdminOrIntern) {
                return detailsBtn + ' ' + editBtn;
            } else if (isManagerIT) {
                return detailsBtn;
            }
            return detailsBtn;
        }

        document.getElementById('exportPdfBtn').addEventListener('click', function () {
            var { jsPDF } = window.jspdf;
            var doc = new jsPDF();
            doc.autoTable({ html: '#table' });
            doc.save('Asset Scraps.pdf');
        });

        function confirmDeleteSelected() {
            var selectedRows = $('#table').bootstrapTable('getSelections');
            if (selectedRows.length === 0) {
                notyf.error('Please select at least one asset scraps to delete.');
                return;
            }

            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete selected!"
            }).then((result) => {
                if (result.isConfirmed) {
                    var selectedIds = selectedRows.map(function (row) {
                        return row.id;
                    });

                    $.ajax({
                        url: '@Url.Action("DeleteSelected", "AssetScraps")',
                        type: 'POST',
                        data: {
                            '__RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val(),
                            'ids': selectedIds
                        },
                        success: function (result) {
                            if (result.success) {
                                notyf.success(result.message);
                                $('#table').bootstrapTable('refresh');
                            } else {
                                notyf.error(result.message);
                            }
                        },
                        error: function (xhr, status, error) {
                            notyf.error('An error occurred while deleting the selected asset scraps.');
                        }
                    });
                }
            });
        }


        $(document).ready(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                notyf.success(successMessage);
            }
        });
    </script>
}
